<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/whole_black" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout style="@style/SettingsFeedbackItemTitle">
        <TextView android:text="@string/setting_connection_camera_name" style="@style/SettingsFeedbackItemTitleText" />
    </FrameLayout>
    <FrameLayout android:focusable="true" android:focusableInTouchMode="true" style="@style/SettingsFeedbackItemTitle">
        <EditText android:id="@id/setting_connection_camera_name" android:singleLine="true" style="@style/SettingsEditText" />
        <ImageView android:id="@id/camera_name_pruge" android:visibility="gone" style="@style/SettingsEditPruge" />
    </FrameLayout>
    <ImageView style="@style/SettingsDividerView" />
    <FrameLayout style="@style/SettingsItemTitleFrame">
        <TextView android:text="@string/setting_connection_wifi_password" style="@style/SettingsFeedbackItemTitleText" />
        <CheckBox android:textColorHighlight="@android:color/holo_red_light" android:gravity="center" android:layout_gravity="right|center" android:id="@id/setting_connection_show_password" android:layout_width="24.0dip" android:layout_height="24.0dip" android:button="@drawable/custom_check_box" android:layout_marginEnd="24.0dip" />
    </FrameLayout>
    <FrameLayout style="@style/SettingsItemTitleFrame">
        <EditText android:id="@id/setting_connection_wifi_password" android:inputType="textPassword" style="@style/SettingsEditText" />
        <ImageView android:id="@id/password_pruge" android:visibility="gone" style="@style/SettingsEditPruge" />
    </FrameLayout>
    <ImageView style="@style/SettingsDividerView" />
    <FrameLayout style="@style/SettingsItemTitleFrame">
        <TextView android:text="@string/setting_connection_confirm_password" style="@style/SettingsFeedbackItemTitleText" />
    </FrameLayout>
    <FrameLayout style="@style/SettingsFeedbackItemTitle">
        <EditText android:id="@id/setting_connection_confirm_password" android:inputType="textPassword" style="@style/SettingsEditText" />
        <ImageView android:id="@id/password_confirm_pruge" android:visibility="gone" style="@style/SettingsEditPruge" />
    </FrameLayout>
    <ImageView style="@style/SettingsDividerView" />
    <FrameLayout style="@style/SettingsItemTitleFrame">
        <TextView android:text="@string/setting_connection_frequency_band" style="@style/SettingsFeedbackItemTitleText" />
    </FrameLayout>
    <FrameLayout android:id="@id/setting_connection_frequency_band" style="@style/SettingsItemFrameStyle">
        <ImageView style="@style/SettingsItemRightIconStyle" />
        <TextView android:id="@id/setting_connection_frequency_band_content" android:text="2.4GHZ" style="@style/SettingsItemStyle" />
    </FrameLayout>
    <ImageView style="@style/SettingsDividerView" />
    <FrameLayout android:layout_width="fill_parent" android:layout_height="0.0dip" android:layout_weight="1.0">
        <TextView android:id="@id/setting_connection_change" android:text="@string/setting_connection_change" style="@style/SettingBottomButtonStyle" />
    </FrameLayout>
</LinearLayout>
